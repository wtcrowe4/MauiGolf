<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="MauiGolf.Pages.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:local="clr-namespace:MauiGolf.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ContentPage.Content>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label
                Padding="0,30"
                FontSize="Title"
                HorizontalOptions="Center"
                Text="Maui Golf"
                VerticalOptions="Start" />
            <Label
                HorizontalOptions="Center"
                Text="Please register a new account"
                TextColor="{DynamicResource PrimaryDark}" />
            <Entry
                x:Name="NameEntry"
                Margin="10,50,10,10"
                Placeholder="Name"
                WidthRequest="300" />
            <Entry
                x:Name="EmailEntry"
                Margin="10"
                Placeholder="Email"
                WidthRequest="300" />
            <Entry
                x:Name="PasswordEntry"
                Margin="10"
                IsPassword="True"
                Placeholder="Password"
                WidthRequest="300" />
            <Entry
                x:Name="ConfirmPasswordEntry"
                Margin="10"
                IsPassword="True"
                Placeholder="Confirm Password"
                WidthRequest="300" />
            <Entry
                x:Name="HomeCourseEntry"
                Margin="10"
                Placeholder="Home Course"
                WidthRequest="300" />
            <Button
                Margin="10,50"
                Padding="20,5"
                BackgroundColor="{DynamicResource PrimaryDark}"
                Clicked="RegisterButton_Clicked"
                HorizontalOptions="Center"
                Text="Register"
                TextColor="{DynamicResource PrimaryLight}" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
