<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiGolf.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">


            <Image
                HeightRequest="200"
                HorizontalOptions="Center"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                Source="dotnet_bot.png" />

            <Button Clicked="Btn_Clicked" Text="Get User" />

            <Label x:Name="lblName" HorizontalOptions="Center" />
            <Label x:Name="lblHandicap" HorizontalOptions="Center" />
            <Label x:Name="lblHomeCourse" HorizontalOptions="Center" />

            <ListView x:Name="lstScores" />




        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
